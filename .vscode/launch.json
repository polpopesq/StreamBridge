{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug TS Server",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "src/server.ts"
            ],
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}/backend"
        }
    ]
}